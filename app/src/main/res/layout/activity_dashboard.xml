<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_height="wrap_content"

        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button and Title Row -->
        <LinearLayout
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Go back"
                android:tint="#FF5722" />

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USERNAME"
                android:textColor="#1A1A1A"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Added logout button before profile picture -->
            <ImageButton
                android:id="@+id/btn_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_lock_power_off"
                android:contentDescription="Logout"
                android:tint="#F44336" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="Profile picture"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </LinearLayout>

    <!-- Header Section with Icons -->

    <!-- ScrollView for Cards -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <!-- Track Disasters Card - Full Width -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_track_disasters"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#FFF3E0"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <!-- Added FrameLayout with background image and overlay for disasters card -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Background Image for Natural Disasters -->
                    <ImageView
                        android:id="@+id/iv_disasters_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Natural disasters background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/disasters_background" />

                    <!-- Dark overlay for text readability -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#70000000" />

                    <!-- Content -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/icon_disasters"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:contentDescription="Track disasters icon"
                            android:src="@android:drawable/stat_sys_warning"
                            android:tint="#FFB74D"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_disasters_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Track Natural Disasters"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/icon_disasters"
                            app:layout_constraintTop_toTopOf="@id/icon_disasters" />

                        <TextView
                            android:id="@+id/tv_earthquakes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:drawablePadding="8dp"
                            android:text="• Earthquakes"
                            android:textColor="#EEEEEE"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/icon_disasters" />

                        <TextView
                            android:id="@+id/tv_tornadoes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="• Tornadoes"
                            android:textColor="#EEEEEE"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_earthquakes" />

                        <TextView
                            android:id="@+id/tv_floods"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="• Floods"
                            android:textColor="#EEEEEE"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_tornadoes" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Maps Card - Full Width with Background Image -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_maps"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Background Image for Maps - Replace with your map image -->
                    <ImageView
                        android:id="@+id/iv_maps_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Maps background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/map_background"/>

                    <!-- Dark overlay for text readability -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000" />

                    <!-- Content -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/icon_maps"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:contentDescription="Maps icon"
                            android:src="@drawable/map"
                            android:background="@android:color/transparent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_maps_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Maps"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/icon_maps"
                            app:layout_constraintTop_toTopOf="@id/icon_maps" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="View danger zones and safe areas"
                            android:textColor="#EEEEEE"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@id/tv_maps_title"
                            app:layout_constraintStart_toStartOf="@id/tv_maps_title"
                            app:layout_constraintTop_toBottomOf="@id/tv_maps_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Emergency Contact and What To Do on same row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Emergency Contact (SOS) Card - Half Width -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_sos"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#F6B8C6"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/icon_sos"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="SOS icon"
                            android:src="@android:drawable/stat_sys_phone_call"
                            android:tint="#D32F2F" />

                        <TextView
                            android:id="@+id/tv_sos_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Emergency Contact"
                            android:textAlignment="center"
                            android:textColor="#1A1A1A"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Quick SOS access"
                            android:textAlignment="center"
                            android:textColor="#616161"
                            android:textSize="13sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- What To Do Card - Half Width -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_what_to_do"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#F0B1FA"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/icon_what_to_do"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="What to do icon"
                            android:src="@android:drawable/ic_dialog_info"
                            android:tint="#7B1FA2" />

                        <TextView
                            android:id="@+id/tv_what_to_do_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="What To Do"
                            android:textAlignment="center"
                            android:textColor="#1A1A1A"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Safety guidelines"
                            android:textAlignment="center"
                            android:textColor="#616161"
                            android:textSize="13sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Chatbot Assistance Card - Full Width -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_chatbot"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#BDF6BF"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp">

                    <ImageView
                        android:id="@+id/icon_chatbot"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:contentDescription="Chatbot icon"
                        android:src="@android:drawable/stat_notify_chat"
                        android:tint="#388E3C"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_chatbot_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Chatbot Assistance"
                        android:textColor="#1A1A1A"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/icon_chatbot"
                        app:layout_constraintTop_toTopOf="@id/icon_chatbot" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Get instant help and answers"
                        android:textColor="#616161"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="@id/tv_chatbot_title"
                        app:layout_constraintStart_toStartOf="@id/tv_chatbot_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_chatbot_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
