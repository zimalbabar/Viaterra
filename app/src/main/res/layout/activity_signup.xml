<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Updated icon to lotus-like aesthetic with dark color -->
        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_logo"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" />

        <!-- Updated title to match reference image -->
        <TextView
            android:id="@+id/tvSignupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your journey starts here"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C2C2C"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/ivAppIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Updated subtitle to match reference -->
        <TextView
            android:id="@+id/tvSignupSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disaster Ready, Anytime, Anywhere"
            android:textSize="16sp"
            android:textColor="#6B7565"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvSignupTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Removed card container for cleaner look -->
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvSignupSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp">

            <!-- Replaced Material TextInputLayout with custom EditText for full control -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/emailIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_dialog_email"
                    android:tint="#5A6B5A" />

                <EditText
                    android:id="@+id/etSignupEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/emailIcon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:hint="E-mail"
                    android:textColorHint="#5A6B5A"
                    android:textColor="#2C2C2C"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:paddingVertical="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/usernameIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:tint="#5A6B5A" />

                <EditText
                    android:id="@+id/etSignupUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/usernameIcon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:hint="Username"
                    android:textColorHint="#5A6B5A"
                    android:textColor="#2C2C2C"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textPersonName"
                    android:paddingVertical="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    android:tint="#5A6B5A" />

                <EditText
                    android:id="@+id/etSignupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/passwordIcon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:hint="Password"
                    android:textColorHint="#5A6B5A"
                    android:textColor="#2C2C2C"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:paddingVertical="8dp" />

<!--                <ImageView-->
<!--                    android:id="@+id/passwordToggle"-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="24dp"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:src="@android:drawable/ic_menu_view"-->
<!--                    android:tint="#5A6B5A" />-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/confirmPasswordIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    android:tint="#5A6B5A" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/confirmPasswordIcon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:hint="Confirm password"
                    android:textColorHint="#5A6B5A"
                    android:textColor="#2C2C2C"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:paddingVertical="8dp" />

<!--                <ImageView-->
<!--                    android:id="@+id/confirmPasswordToggle"-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="24dp"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:src="@android:drawable/ic_menu_view"-->
<!--                    android:tint="#5A6B5A" />-->
            </RelativeLayout>

            <!-- Sage green button with clean styling -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Sign up"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:backgroundTint="#6B8F71"
                app:cornerRadius="28dp"
                android:layout_marginTop="24dp" />

            <!-- Added divider with "or" text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#C5CEC0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textColor="#6B7565"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#C5CEC0" />
            </LinearLayout>

            <!-- Added social login icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/input_background"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_g"
                    android:id="@+id/btnGoogleSignUp"
                    android:padding="8dp"
                    android:layout_marginHorizontal="12dp"
                    android:contentDescription="Google login" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up with Google"
                    android:textColor="#2C2C2C"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Updated login link styling to match reference -->
        <TextView
            android:id="@+id/tvGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?  Sign in"
            android:textColor="#3D4F3D"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/inputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
