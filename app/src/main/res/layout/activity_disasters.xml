<?xml version="1.0" encoding="utf-8"?>
<!-- 1. activity_main.xml - Main Dashboard Screen -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natural Disaster Alerts"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginBottom="8dp" />

        <!-- Location Section !-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_mylocation"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Location: Loading..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp"
                 />

        </LinearLayout>



        <!-- Alert Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/extra_light_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alert Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAlertStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Clear - No Active Alerts"
                    android:textSize="16sp"
                    android:textColor="@color/medium_green" />

                <TextView
                    android:id="@+id/tvLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Updated: Just now"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Earthquakes Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Earthquakes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEarthquakes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:background="#FAFAFA"
            android:padding="8dp" />

        <!-- Volcano Activity Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volcano Activity"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVolcanoes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#FAFAFA"
            android:padding="8dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Refresh Data"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_green"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Settings"
                android:textColor="@color/primary_green"
                android:backgroundTint="@color/warning_yellow"
                android:strokeColor="@color/primary_green"
                android:strokeWidth="2"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
