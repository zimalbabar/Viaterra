<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:padding="24dp"
    tools:context=".LockScreenEmergencyActivity">

    <TextView
        android:id="@+id/tvLockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY ACCESS"
        android:textColor="#D32F2F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfileSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#2D2D2D"
        app:layout_constraintTop_toBottomOf="@id/tvLockTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvLockName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: ---"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLockBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group: ---"
                android:textColor="#E0E0E0"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvLockAllergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergies: ---"
                android:textColor="#E0E0E0"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/btnLockSosContainer"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardProfileSummary">

        <View
            android:id="@+id/lockSosRipple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sos_button_ripple" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLockSos"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/sos_button_circle"
            android:text="SOS"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:elevation="8dp" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe up to unlock for full access"
        android:textColor="#888888"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
