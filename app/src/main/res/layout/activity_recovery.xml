<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recovery Guide"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Health Care -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:id="@+id/tvHealthTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Health Care &amp; First Aid"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawablePadding="16dp" />
                
                <TextView
                    android:id="@+id/tvHealthContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Check for injuries.\n• Apply pressure to wounds.\n• Keep victims warm.\n• Do not move seriously injured persons unless they are in immediate danger."
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Water Safety -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvWaterTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Water Safety"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawablePadding="16dp"/>

                <TextView
                    android:id="@+id/tvWaterContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Boil water for at least 1 minute.\n• Use water purification tablets if available.\n• Avoid flood water.\n• Store water in clean, closed containers."
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Helplines -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHelpline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvHelplineTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Government Helplines"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawablePadding="16dp"/>

                <TextView
                    android:id="@+id/tvHelplineContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Emergency: 112\n• Ambulance: 102\n• Fire: 101\n• Disaster Management: 108"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
