<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#43A047"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Alert Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_share"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Alert Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFF9C4">

                    <TextView
                        android:id="@+id/tvAlertTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Magnitude 6.4 Earthquake"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/tvAlertSeverity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Severity: MODERATE"
                        android:textSize="16sp"
                        android:textColor="#F57C00"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Location Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvDetailLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Southern California Coast"
                        android:textSize="16sp"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/tvCoordinates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coordinates: 34.05°N, 118.25°W"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvDetailDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance from you: 85 km"
                        android:textSize="14sp"
                        android:textColor="#43A047"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Event Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvDetailMagnitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Magnitude: 6.4"
                        android:textSize="16sp"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/tvDetailDepth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Depth: 12.5 km"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvDetailTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: Dec 17, 2025 14:23 UTC"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Affected Area -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Affected Area"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAffectedRadius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Impact Radius: 150 km"
                        android:textSize="16sp"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/tvAffectedPopulation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Population Affected: 2.5 million"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvAffectedCities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Major Cities: Los Angeles, Santa Monica, Pasadena"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Safety Recommendations -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safety Recommendations"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSafetyInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Drop, Cover, and Hold On if you feel shaking\n• Stay away from windows and heavy objects\n• Be prepared for aftershocks\n• Check for injuries and damage\n• Follow local emergency services instructions"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
