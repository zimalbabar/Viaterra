<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:id="@+id/main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Earthquake Alerts"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Location Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Location: Loading..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Alert Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/extra_light_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alert Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAlertStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Clear - No Active Alerts"
                    android:textSize="16sp"
                    android:textColor="@color/primary_green" />

                <TextView
                    android:id="@+id/tvLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Updated: Just now"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Detection Radius Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:background="@color/extra_light_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detection Radius"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 km"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <SeekBar
                        android:id="@+id/seekBarRadius"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:max="4950"
                        android:progress="200"
                        android:progressTint="@color/primary_green"
                        android:thumbTint="@color/primary_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000 km"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvRadiusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current: 200 km"
                    android:textSize="14sp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Earthquakes Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Earthquakes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginBottom="12dp" />

        <!-- Empty State Layout -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/text_tertiary"
            android:visibility="gone"
            android:padding="32dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img_no_earthquakes"
                android:contentDescription="No earthquakes detected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Clear!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No earthquakes detected in your area"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEarthquakes"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:padding="8dp" />

        <!-- Action Button -->
        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Data"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_green"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
