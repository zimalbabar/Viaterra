<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Viaterra" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Viaterra" parent="Base.Theme.Viaterra" />


    <style name="CardStyleDark">
        <item name="cardBackgroundColor">#1E1E1E</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CardStyleBlue" parent="CardStyleDark">
        <item name="cardBackgroundColor">#0066FF</item>
    </style>

    <style name="CardStyleRed" parent="CardStyleDark">
        <item name="cardBackgroundColor">#FF3B30</item>
    </style>

    <style name="CardStyleBotanical">
        <item name="cardBackgroundColor">#F9FBF9</item> <!-- Very light green tint -->
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/sage_green</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>







</resources>